@model MovieManagement.Models.PeliculasViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-3">
        <a class="btn btn-success" asp-action="Create">Nueva Pelicula</a>
    </div>
    <div class="col-9">
        <form class="form-inline">
            <div class="row">
                <div class="col">
                    <input type="text" asp-for="SearchBy" placeholder="Busqueda..." class="form-control" />
                </div>
                <div class="col">
                    <select asp-for="Genero" asp-items="ViewBag.GeneroId" class="form-select">
                        <option value="">Genero...</option>
                    </select>
                </div>
                <div class="col">
                    <select asp-for="Prestadas" class="form-select">
                        <option value="">Prestado...</option>
                        <option value="Si">Sí</option>
                        <option value="No">No</option>
                    </select>
                </div>
                <div class="col">
                    <input class="btn btn-primary" type="submit" value="Buscar" />
                </div>
            </div>
        </form>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(x => x.Peliculas[0].Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peliculas[0].FechaDeSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peliculas[0].Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peliculas[0].Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peliculas[0].EstaPrestada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Peliculas[0].Genero)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Peliculas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaDeSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntuacion)
                </td>
                <td>
                    <img src="@item.Imagen" alt="n/a" style="height: 100px; width: auto;">
                </td>
                <td>
                    @(item.EstaPrestada ? "Sí" : "No")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genero!.Descripcion)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
